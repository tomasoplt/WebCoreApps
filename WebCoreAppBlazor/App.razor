<Router AppAssembly="@typeof(Program).Assembly" AdditionalAssemblies="new[] { typeof(WebCoreAppBlazor.Content.MainLayout).Assembly}">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(WebCoreAppBlazor.Content.MainLayout)" />
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(WebCoreAppBlazor.Content.MainLayout)">
            <p>Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>
