@page
@model WebCoreAppRazorPages.GridWithEditPageDetailModel
@using Kendo.Mvc.UI

<div class="row">
    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
        <h1 class="page-title txt-color-blueDark">
            <i class="fa fa-table fa-fw "></i>
            Telerik
            <span>
                > GridWithEditPage
            </span>
        </h1>
    </div>
    <div class="col-xs-12 col-sm-5 col-md-5 col-lg-8">
        <ul id="sparks" class="">
            <li class="sparks-info">
                <h4> Detail záznamu oddělení </h4>
            </li>
            <li class="sparks-info">
                <h5> </h5>
            </li>
            <li class="sparks-info">
                <h5> </h5>
            </li>
        </ul>
    </div>
</div>


<!-- row -->
<div class="row">

    <!-- NEW WIDGET START -->
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

        <!-- Widget ID (each widget will need unique ID)-->
        <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-0" data-widget-editbutton="false">
            <header>
                <span class="widget-icon">
                    <i class="fa fa-table"></i>
                </span>
                <h2>Detail záznamu oddělení</h2>
            </header>

            <!-- widget div-->
            <div>
                <!-- widget edit box -->
                <div class="jarviswidget-editbox">
                    <!-- This area used as dropdown edit box -->
                </div>
                <!-- end widget edit box -->
                <!-- widget content -->
                <div class="widget-body">

                    <div class="form-group row">
                        <div class="col">
                            <div class="col-sm-5">
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Název oddělení</label>
                                    <div class="col-md-7">
                                        <input class="form-control" placeholder="Default Text Field" type="text">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col">
                            <div class="col-sm-5">
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Instruktor</label>
                                    <div class="col-md-7">
                                        <input class="form-control" placeholder="Type somethine..." type="text" list="list">
                                        <datalist id="list">
                                            <option value="Alexandra">Alexandra</option>
                                            <option value="Alice">Alice</option>
                                            <option value="Anastasia">Anastasia</option>
                                            <option value="Avelina">Avelina</option>
                                            <option value="Basilia">Basilia</option>
                                        </datalist>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-12">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fa fa-save"></i>
                                    Submit
                                </button>
                                <button class="btn btn-default" type="submit">
                                    Cancel
                                </button>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- end widget content -->
            </div>
            <!-- end widget div -->
        </div>
    </article>
</div>

<script src="~/js/views/Telerik/BasicGrid.js" crossorigin="anonymous"></script>

