@page "{Id:int}"
@model WebCoreAppRazorPages.GridWithModalEditPopup

@{
    Layout = null;
}

<head>
    @{ await Html.RenderPartialAsync("_StylesheetsPartial"); }
    @{ await Html.RenderPartialAsync("_ScriptsHeader"); }
</head>

<div class="row">

    <!-- NEW WIDGET START -->
    <article class="col-sm-12 col-md-12 col-lg-12">

        <!-- Widget ID (each widget will need unique ID)-->
        <div class="jarviswidget" id="wid-id-0" data-widget-colorbutton="false" data-widget-editbutton="false">
            <header>
                <span class="widget-icon">
                    <i class="fa fa-eye"></i>
                </span>
                <h2>Default Elements</h2>

            </header>

            <!-- widget div-->
            <div>

                <!-- widget edit box -->
                <div class="jarviswidget-editbox">
                    <!-- This area used as dropdown edit box -->

                </div>
                <!-- end widget edit box -->
                <!-- widget content -->
                <div class="widget-body">

                    <form method="post" action ="/Telerik/GridWithModalEdit/?handler=PopupDetail" class="form-horizontal">

                        @Html.AntiForgeryToken()

                        <fieldset>
                            <legend>Department details</legend>

                            <div class="form-group">
                                <label class="col-md-2 control-label">Department Id</label>
                                <div class="col-md-10">
                                    <input asp-for="Department.DepartmentID" class="form-control" placeholder="Department Id" type="text">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label">Department name</label>
                                <div class="col-md-10">
                                    <input asp-for="Department.Name" class="form-control" placeholder="Department name" type="text">
                                </div>
                            </div>

                        </fieldset>

                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-12">
                                    <button class="btn btn-default close-button" disabled type="button">
                                        Cancel
                                    </button>
                                    <button class="btn btn-primary save-button" disabled type="button">
                                        <i class="fa fa-save"></i>
                                        Submit
                                    </button>
                                </div>
                            </div>
                        </div>

                    </form>

                </div>
                <!-- end widget content -->

            </div>
            <!-- end widget div -->

        </div>
        <!-- end widget -->
    </article>
</div>

<!-- end widget grid -->
